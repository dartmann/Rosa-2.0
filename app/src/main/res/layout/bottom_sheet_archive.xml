<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/bottom_sheet_linearlayout"
    android:background="@android:color/white"
    android:layout_width="700dp"
    android:layout_gravity="center_horizontal"
    android:padding="30dp"
    android:layout_height="wrap_content"
    app:behavior_hideable="true"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/bottom_sheet_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_downward_white_24dp"
        android:layout_gravity="top|end"
        app:fabSize="mini" />

    <TextView
        android:id="@+id/bottom_sheet_name"
        android:textStyle="bold"
        android:textSize="22sp"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_account_circle_black_24dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:background="@drawable/tv_edge"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/bottom_sheet_address"
        android:textSize="20sp"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_navigation_black_24dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:background="@drawable/tv_edge"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/bottom_sheet_phone"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/ic_whatsapp_black_24dp"
        android:layout_width="match_parent"
        android:background="@drawable/tv_edge"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/bottom_sheet_email"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/ic_email_black_24dp"
        android:layout_width="match_parent"
        android:background="@drawable/tv_edge"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/bottom_sheet_price"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_euro_symbol_black_24px"
        android:gravity="center_vertical"
        android:background="@drawable/tv_edge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/bottom_sheet_misc"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_speaker_notes_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>