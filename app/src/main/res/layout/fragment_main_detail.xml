<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MainDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/fragment_detail_picture"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_account_circle_black_24dp"
                android:layout_width="200dp"
                android:padding="5dp"
                android:layout_height="200dp"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- TODO: underline the textviews -->

            <TextView
                android:id="@+id/fragment_detail_name"
                android:layout_width="match_parent"
                android:textSize="28sp"
                android:gravity="center_vertical"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_account_circle_black_24dp"
                android:layout_height="60dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/cardview_dark_background" />

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/fragment_detail_phone"
                android:layout_width="match_parent"
                android:textSize="20sp"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:drawableStart="@drawable/ic_whatsapp_black_24dp"
                android:layout_height="60dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/cardview_dark_background" />

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/fragment_detail_email"
                android:layout_width="match_parent"
                android:textSize="20sp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:drawableStart="@drawable/ic_email_black_24dp"
                android:layout_height="60dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/cardview_dark_background" />

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/fragment_detail_address"
                android:layout_width="match_parent"
                android:textSize="20sp"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_navigation_black_24dp"
                android:gravity="center_vertical"
                android:layout_height="60dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/cardview_dark_background" />

            <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:layout_marginTop="5dp"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fragment_detail_price"
                        android:layout_width="match_parent"
                        android:textSize="20sp"
                        android:drawablePadding="5dp"
                        android:drawableStart="@drawable/ic_euro_symbol_black_24px"
                        android:gravity="center_vertical"
                        android:layout_height="60dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/cardview_dark_background" />

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fragment_detail_category"
                        android:layout_width="match_parent"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:drawableStart="@drawable/ic_stars_black_24px"
                        android:textSize="18sp"
                        android:layout_height="60dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/cardview_dark_background" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/fragment_detail_misc"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:drawablePadding="5dp"
                android:layout_marginTop="5dp"
                android:drawableStart="@drawable/ic_speaker_notes_black_24dp"
                android:textSize="18sp"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/cardview_dark_background" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>